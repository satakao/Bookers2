
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= link_to ' 編集' , edit_user_path(user), class: "btn btn-secondary" %>
      <h1>New Book</h1>
      <%= form_with model:book_opinion do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :opinion %><br>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>
</div>