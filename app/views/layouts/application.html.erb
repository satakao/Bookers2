<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/c7fcadd3b5.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= "Bookers" %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <p class="nav-item">
                <%= link_to(user_path(current_user.id), class: "nav-link text-light") do %>
                  <i class="fa-solid fa-house"></i><%= " Home" %>
                <% end %>
              </p>
              <li class="nav-item">
                <%= link_to(users_path, class: 'nav-link text-light') do %>
                  <i class="fa-solid fa-users"></i><%= " Users" %>
                <% end %>
              </li>
              <p class="nav-item">
                <%= link_to(books_path, class: 'nav-link text-light') do %>
                  <i class="fa-solid fa-book-open"></i><%= " Books" %>
                <% end %>
              </p>
              <p class="nav-item">
                <%= link_to(destroy_user_session_path, method: :delete, class: 'nav-link text-light') do %>
                  <i class="fa-solid fa-right-from-bracket"></i><%= " Log out" %>
                <% end %>
              </p>
            <% else %>
              <li class="nav-item">
                <%= link_to(root_path, class: "nav-link text-light") do %>
                  <i class="fa-solid fa-house"></i><%= " Home" %>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to(home_about_path, class: 'nav-link text-light') do %>
                  <i class="fa-solid fa-link"></i><%= " About" %>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to(new_user_registration_path, class: 'nav-link text-light') do %>
                  <i class="fa-solid fa-user-plus"></i><%= " Sign up" %>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to(user_session_path, class: 'nav-link text-light') do  %>
                  <i class="fa-solid fa-right-to-bracket"></i><%= " Log in" %>
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
    <footer class="container mt-5">
        <div class="row">
          <div class="mx-auto">
              <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>








