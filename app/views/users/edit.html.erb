<div class="container">
  <div class="row">
    <div class="mx-auto col-10 px-5 mt-2">
      <h1>User info</h1>
       <%= form_with model: @user do |f| %>
        <h4>Name</h4>
        <%= f.text_field :name %>
        <%= f.file_field :profile_image, accept: "image/*", class: "w-100" %>
        <h4>Introduction</h4>
        <%= f.text_area :introduction %><br>
        <%= f.submit 'Update User' %>
      <% end %>
    </div>
  </div>
</div>


